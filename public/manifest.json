{
  "manifest_version": 2,

  "name": "Hault",
  "description": "Advanced History Storage. Anonymous Browsing. Persistent Sessions.",
  "version": "1.2",

  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "lock16.png",
    "48": "lock48.png"
  },
  "incognito": "split",
  "permissions": [
    "activeTab",
    "https://www.google.com/",
    "background",
    "browsingData",
    "cookies",
    "geolocation",
    "history",
    "identity",
    "sessions",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "webNavigation"
  ],
  "content_scripts": [
    {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["scraper.js"]
    }
  ],
  "background": {
    "scripts":[ "bootstrap.min.js",
               "background.js"
             ],
    "persistent": false
  }
}

